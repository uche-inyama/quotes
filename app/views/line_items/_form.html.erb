<%= simple_form_for [quote, line_item_date, line_item],
                    html: { class: "form line-item line-item--form" } do |f| %>

  <%= form_error_notification(line_item) %>

  <%= f.input :name,
              wrapper_html: { class: "line-item__name" },
              input_html: { autofocus: true, placeholder: :name } %>
  <%= f.input :quantity,
              wrapper_html: { class: "line-item__quantity" }, input_html: {placeholder: :quantity}%>
  <%= f.input :unit_price,
              wrapper_html: { class: "line-item__price" }, input_html: {placeholder: :price} %>
  <%= f.input :description,
              wrapper_html: { class: "line-item__description" }, input_html: {placeholder: :description} %>

  <div class="line-item__actions">
    <%= link_to "Cancel", quote_path(quote), class: "btn btn--light" %>
    <%= f.submit class: "btn btn--secondary" %>
  </div>
<% end %>